<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<%= form_tag(search_cars_url, method: "get") do %>   <!-- Add search for to html for VIN and model of car -->
  <%= label_tag(:query, "Search by VIN or Model:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Vin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make.name if car.make %></td>   <!-- Displays the name of the Make, rather than the id; added "if car.make" to not allow nil values -->
        <td><%= car.model %></td>
        <td><%= car.vin %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
